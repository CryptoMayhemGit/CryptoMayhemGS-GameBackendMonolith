{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.File",
      "Serilog.Expressions"
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath = '/'"
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {CorrelationId} ({SourceContext}) {LineNumber}{Message}{Exception}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\MayhemLogs\\Workers\\Explore mission\\log-.txt",
          "rollingInterval": "Day",
          "shared": true,
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {CorrelationId} ({SourceContext}) {LineNumber}{Message}{NewLine}{Exception}"
        }
      }
    ]
  }
}
